rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Planner items - require authentication
    match /planner-items/{itemId} {
      allow read, write: if request.auth != null;
    }
    
    // Teams - public read, authenticated write
    match /teams/{teamId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Players - public read, authenticated write
    match /players/{playerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Edit history - public read/write for undo functionality
    match /edit-history/{historyId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
